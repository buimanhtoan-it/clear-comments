    "eslint": "^9.23.0",
    "mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vscode-test": "^1.6.1"
  },
  "icon": "images/logo.png",
  "dependencies": {
    "vscode-oniguruma": "^2.0.1",
    "vscode-textmate": "^9.2.0"
  }
}